<Tela_Tarefas>:
    ScrollView:
        size_hint_y: .73
        pos_hint: {'x':0, 'y':.11}
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            size:(root.width, root.height)
            size_hint_y: None
            size_hint_x: None
            cols: 1
            height: self.minimum_height
            row_default_height: 180
            row_force_default: True
            
            #Titulo
            MDLabel:
                text: 'Tarefas'
                font_name: 'Fonts\Comfortaa-Regular.ttf'
                pos_hint: {'center_x': .55, 'center_y': .97}
                font_size: 36

            #Aba de Pesquisa
            MDTextField:
                hint_text: "Encontrar Tarefas:"
                mode: 'rectangle'
                icon_left: 'magnify'
                icon_left_color_normal: 0, 0, 0, 1
                icon_left_color_focus: 0, 0, 0, 1
                line_color_normal: 0, 0, 0, 1
                hint_text_color_normal: 0, 0, 0, .5
                text_color_normal: 0, 0, 0, 1
                line_color_focus: 0, 0, 0, 1
                hint_text_color_focus: 0, 0, 0, .5
                text_color_focus: 0, 0, 0, 1
                pos_hint: {'center_x': .50, 'center_y': .80}
                size_hint: .9, .08

            #Label Informativo
            MDLabel:
                text: 'Clique em Nova para criar uma tarefa. Clique em cima da tarefa já criada para visualizar ou editar.'
                color: 0, 0, 0, .3
                halign: 'left'
                pos_hint: {'center_x': .55, 'center_y': .73}
                font_size: '14'

            #Botão Filtro de Tarefas
            MDIconButton:
                icon: 'filter'
                icon_size: 30
                pos_hint: {'center_x': .10, 'center_y': .67}

            #Botão Tipo de Tarefas: {Concluída / Não Concluída / Pendente}
            MDIconButton:
                icon: 'book'
                icon_size: 30
                pos_hint: {'center_x': .90, 'center_y': .67}


    #Menu de Navegação
    MDTopAppBar:
        elevation: 10
        pos_hint: {"down": 1}
        md_bg_color: "#FFFFFF"
        specific_text_color: "#4a4939"
        left_action_items:
            [['menu', lambda x: nav_drawer_tarefas.set_state("open")]]

    #Botão Criar Nova Tarefa
    MDRectangleFlatIconButton:
        icon: 'plus'
        text: 'Nova'
        icon_color: '#FFFFFF'
        text_color: '#FFFFFF'
        font_style: "Button"
        md_bg_color: '#000000'
        line_color: '#000000'
        pos_hint: {"center_x": .5, "center_y": .08}
        size_hint: 0.3, 0.06
        icon_size: 30
        on_release: root.botao_nova()

    #Menu de Navegação
    MDNavigationDrawer:
        id: nav_drawer_tarefas
        radius: 0, 0, 0, 0
        md_bg_color: "#7CB2F2"
        MDNavigationDrawerMenu:
            #Perfil do Usuário
            FitImage:
                size_hint: None, None
                size: "70dp", "70dp"
                source: "Images/dark souls.jpg"
                radius: 36, 36, 36, 36
            MDNavigationDrawerLabel:
                text: 'Nome/Sobrenome'
                padding: '12dp', '12dp', 0, '56dp'

            #Navegação entre telas
            MDNavigationDrawerItem:
                text: 'Início'
                icon: 'home'
                font_style: 'Button'
                on_release:
                    nav_drawer_tarefas.set_state('close')
                    root.manager.current = 'tela_relatorios'
            MDNavigationDrawerDivider:
            MDNavigationDrawerItem:
                text: 'Tarefas'
                icon: 'check-circle'
                font_style: 'Button'
                on_release:
                    nav_drawer_tarefas.set_state('close')
                    root.manager.current = 'tela_tarefas'
            MDNavigationDrawerDivider:
            MDNavigationDrawerItem:
                text: 'Lembretes'
                icon: 'book-open-blank-variant'
                font_style: 'Button'
                on_release:
                    nav_drawer_tarefas.set_state('close')
                    root.manager.current = 'tela_lembretes'
            MDNavigationDrawerDivider:
            MDNavigationDrawerItem:
                text: 'Temporizador'
                icon: 'clock-time-three'
                font_style: 'Button'
                on_release:
                    nav_drawer_tarefas.set_state('close')
                    root.manager.current = 'tela_temporizador'
            MDNavigationDrawerDivider:

    #Botão de Configurações
    MDIconButton:
        icon: 'cog'
        icon_size: 27
        pos_hint: {'center_x': .90, 'center_y': .048}
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = 'tela_configuracoes'