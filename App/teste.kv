<Pomodoro>:
    canvas.before:
        Color:
            rgba: root.pomodoro_cor + [0.3]
        Line:
            width: root.pomodoro_tamanho
            ellipse: (self.x, self.y, self.width, self.height, 0, 360)
    canvas.after:
        Color:
            rgb: root.pomodoro_cor
        Line:
            width: root.pomodoro_tamanho
            ellipse: (self.x, self.y, self.width, self.height, 0, self.pomodoro_valor*3.6)
    MDLabel:
        text: root.timer_string
        halign: 'center'
        font_size: 30
    #Botão Iniciar / Pausar 
    MDIconButton:
        id: botao_iniciar
        icon: 'play-circle'
        icon_size: 40
        pos_hint: {'center_x': .5, 'center_y': .08}
        on_release:
            self.icon = 'pause-circle' if self.icon == 'play-circle' else 'play-circle'
            botao_reiniciar.disabled = False if self.icon != 'play-circle' else True
            root.click()
    #Botão Reiniciar
    MDIconButton:
        id: botao_reiniciar
        icon: 'restart'
        icon_size: 40
        pos_hint: {'center_x': .70, 'center_y': .20}
        icon_color: 0, 0, 0, 1
        disabled_color: 0, 0, 0, .3
        disabled: True
        on_release:
            botao_iniciar.icon = 'play-circle'
            self.disabled = True
            root.restart()



MDBoxLayout:
    md_bg_color: 1, 1, 1, .15
    radius: [100, ]
    size_hint: None, None
    size: "200dp", "200dp"
    pos_hint: {'center_x': .5, 'center_y': .5}
    Pomodoro